{
  "manifest_version": 3,
  "name": "SmartShot By-DNATech",
  "version": "1.0",
  "description": "Capture and manage screenshots with metadata locally.",
  "permissions": [
    "downloads",
    "downloads.open",
    "downloads.shelf",
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "commands",
    "management"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
    
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "Smartshot logo.png"
    }
  },
  "icons": {
    "128": "Smartshot logo.png"
  },
  "commands": {
    "take_screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Take screenshot"
    }
  }
}